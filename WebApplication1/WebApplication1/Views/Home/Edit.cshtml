@model TodoItemEditModel

@{
    ViewData["Title"] = "Редактирование";
}

<a asp-action="Index" class="btn btn-link">< На главную</a>

<form method="post" asp-action="Edit" class="w-25">
    <fieldset>
        <legend>Редактировать задачу</legend>
        <div class="form-group">
            <label asp-for="Title">Задача</label>
            <input type="text" asp-for="Title" class="form-control" value="@Model.Title" required />
        </div>
        <div class="form-check">
            <input type="checkbox" asp-for="IsCompleted" checked="@Model.IsCompleted"/>
            <label asp-for="IsCompleted">Завершено</label>
        </div>

        <button type="submit" class="btn btn-success">Обновить</button>
    </fieldset>
</form>